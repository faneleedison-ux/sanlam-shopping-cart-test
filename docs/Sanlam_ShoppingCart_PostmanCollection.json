{
  "info": {
    "name": "Sanlam Shopping Cart API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for testing Sanlam Shopping Cart technical test endpoints."
  },
  "item": [
    {
      "name": "Add Item to Cart",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/shop/{{cartId}}/items?itemName={{itemName}}&price={{price}}&quantity={{quantity}}",
          "host": [
            "http://localhost:8080"
          ],
          "path": [
            "shop",
            "{{cartId}}",
            "items"
          ],
          "query": [
            {
              "key": "itemName",
              "value": "{{itemName}}",
              "description": "The name of the item to add"
            },
            {
              "key": "price",
              "value": "{{price}}",
              "description": "Unit price of the item (BigDecimal)"
            },
            {
              "key": "quantity",
              "value": "{{quantity}}",
              "description": "Quantity of the item"
            }
          ],
          "variable": [
            {
              "key": "cartId",
              "value": "cart123",
              "description": "Unique ID for the cart"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Cart Total",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/shop/{{cartId}}/total",
          "host": [
            "http://localhost:8080"
          ],
          "path": [
            "shop",
            "{{cartId}}",
            "total"
          ],
          "variable": [
            {
              "key": "cartId",
              "value": "cart123",
              "description": "Unique ID for the cart"
            }
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "cartId",
      "value": "cart123"
    },
    {
      "key": "itemName",
      "value": "Book"
    },
    {
      "key": "price",
      "value": "100"
    },
    {
      "key": "quantity",
      "value": "2"
    }
  ]
}